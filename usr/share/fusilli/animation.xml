<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="animation">
		<short>Animations</short>
		<long>Use various animations as window effects</long>
		<category>Effects</category>

		<deps>
			<relation type="after">
				<plugin>decoration</plugin>
			</relation>

			<relation type="before">
				<plugin>fade</plugin>
			</relation>
		</deps>

		<group>
			<short>Window Animations</short>

			<subgroup multilist="true" collapsible="true">
				<short>Open Animation</short>

				<long>&lt;span size="small"&gt;Effects available: curvedfold, dream, fade, glide1, glide2, horizontalfolds, magiclamp, sidekick, vacuum, wave, zoom, airplane, beamup, burn, domino, explode, fold, glide3, leafspread, skewer&lt;/span&gt;</long>

				<option type="list_string" per_screen="true" name="open_effects">
					<short>Open Effect</short>
					<long>The animation effect shown when creating a window.</long>
					<default>
						<item>zoom</item>
						<item>fade</item>
						<item>fade</item>
					</default>
				</option>

				<option type="list_int" per_screen="true" name="open_durations">
					<short>Duration</short>
					<long>Animation duration in milliseconds for open effect.</long>
					<min>50</min>
					<max>4000</max>
					<default>
						<item>200</item>
						<item>150</item>
						<item>150</item>
					</default>
				</option>

				<option type="list_string" per_screen="true" name="open_matches">
					<short>Window Match</short>
					<long>The windows that will be animated.</long>
					<hint>match</hint>
					<default>
						<item>(type=Normal | Dialog | ModalDialog | Unknown) &amp; !(name=gnome-screensaver) &amp; !(name=mate-screensaver)</item>
						<item>(type=Menu | PopupMenu | DropdownMenu)</item>
						<item>(type=Tooltip | Notification | Utility) &amp; !(name=fusilli) &amp; !(title=notify-osd)</item>
					</default>
				</option>
			</subgroup>

